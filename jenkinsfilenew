pipeline{
    agent{label 'master'}
    tools{maven 'M3'}
    stages{
        stage('Checkout'){
            steps{
                git branch: 'master', url:'https://github.com/EdsonMontanhini/spring-petclinic.git'
            }
        }
        stage('Build'){
            steps{
                sh 'whoami'
                sh 'mvn compile'
            }
        }
        stage('Test'){
            steps{
                sh 'mvn test'
            }
        }
        stage('Package'){
            steps{
                sh 'mvn package'
            }
        }
        stage('Deploy'){
            steps{
                sh 'chmod +x /var/jenkins_home/worspace/PetClinicDeclarativePipeline/target/*jar'
                sh 'java -jar /var/jenkins_home/worspace/PetClinicDeclarativePipeline/target/*jar'
            }
        }
    }
}
